@model ManlikaBank.Models.AccountModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Account Page";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <h1 id="title">Account</h1>
        <br />
        <h2>Bank No. : @Model.BankNo</h2>
        <h2>Balance : @Model.Balance.ToString("#,##0.00") THB</h2>

        <br />
        <h2>Transaction History</h2>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Action</th>
                    <th>From/To</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.TransferModels != null)
                {
                    foreach (var item in Model.TransferModels)
                    {
                        <tr>
                            <td>@item.Datetime.Value.ToString("dd/MM/yyyy HH:mm:ss")</td>
                            <td>@item.ActionName</td>
                            <td>@item.Name</td>
                            <td>@item.Amount</td>
                        </tr>
                    }
                }

            </tbody>
        </table>
    </div>
</body>
</html>

<script type="text/javascript">

</script>

<style>
    

    table, td, th {
        font-family: 'browalia', sans-serif !important;
        font-size: 11pt;
        font-weight: 300;
        line-height: 11pt;
    }

    td, th {
        border: 1px solid black;
        text-align: center;
        padding: 6px;
    }

    tr {
        height: 1.4rem;
    }


    table {
        table-layout: fixed;
        width: 100%;
        border-collapse: collapse;
    }
</style>
